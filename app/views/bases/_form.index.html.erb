<%=form_with(model: @base, url: bases_path, local: true, method: :post) do |f| %>
  <%=render 'shared/error_messages', obfect: @base %>
  
  <%= f.label "拠点番号", class:"label_text" %>
  <%= f.number_field :base_number, class: "form-control" %>
  
  <%= f.label "拠点名", class:"label_text" %>
  <%= f.text_field :base_name, class: "form-control" %>
  
  <%= f.label "勤怠種類", class:"label_text" %>
  <%= f.select :base_type, ["出勤", "退勤"], {include_blank: '選択して下さい'}, class: "form-control" %>
  
  <%= f.submit "拠点の追加", class: "btn btn-primary btn-block" %>
<% end %>