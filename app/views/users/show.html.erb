<% provide(:title, @user.name) %>
<div>
  <table class = "table table-bordered table-condensed user-table">
    <tr valign = "bottom">
      <td>
        <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
        <%= l(@first_day, format: :middle) %>時間管理表
        <%= link_to "→", user_path(date: @first_day.next_month),class: "btn btn-primary" %>
      </td>
      <td>指定勤務開始時間 9:00<br> 
          指定勤務終了時間 18:00</td>
      <td valign = "bottom">基本時間<%= format_basic_info(@user.basic_time) %></td>
      <td valign = "bottom">初日　<%= l(@first_day, format: :short) %></td>
    </tr>
    <tr>
      <td>所属 <%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名 　<%= @user.name %></td>
      <td>出勤日数 <%= @worked_sum %>日</td>
      <td>締め　<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>
<div class = "btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  <%= link_to "CSV出力", class: "btn btn-primary" %>
  <%= link_to "勤怠修正ログ(承認済)", class: "btn btn-primary" %>

</div>
<div>
  <table class = "table table-bordered table-condensed table-striped" id = "table-attendances">
    <thead>
      <tr>
        <th rowspan = "3">残業申請</th>
        <th rowspan = "3">日付</th>
        <th rowspan = "3">曜日</th>
        <th colspan = "8">【実績】</th>
        <th colspan = "5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan = "3">出社</th>
        <th colspan = "2">退社</th>
        <th rowspan = "2">在社時間</th>
        <th rowspan = "2">備考</th>
        <th colspan = "2", width = 100>終了予定時間</th>
        <th rowspan = "2">時間外時間</th>
        <th rowspan = "2">業務処理内容</th>
        <th rowspan = "2">指示者確認印</th>
      </tr>
      <tr>
        <th width = 25>時</th>
        <th width = 25>分</th>
        <th></th>
        <th width = 25>時</th>
        <th width = 25>分</th>
        <th width = 25>時</th>
        <th width = 25>分</th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= link_to "残業申請",class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class = '<%= "wday#{day.worked_on.wday}" %>'><%= $days_of_the_week[day.worked_on.wday] %></td>
          
          <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at.floor_to(15.minute), format: :min) if day.started_at.present? %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at.floor_to(15.minute), format: :min) if day.finished_at.present? %></td>
          <td></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %> 
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td><%= day.note %></td>
          <td><%= day.note %></td>
          <td><%= day.note %></td>
          <td><%= day.note %></td>
         </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td></td>
        <td colspan = "2"></td>
        <td colspan = "5"></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan = "5"></td>
        <td>
          <p>所属長承認　未</p>
          <li class= "dropdown">
          	<button type="button" class= "btn btn-default btn-block" "dropdown-toggle" data-toggle="dropdown">選択して下さい　<span class= "caret"></span>
          	</button>
          	<ul class= "dropdown-menu">
          		<li><%= link_to "上長A", "#" %></li>
          		<li><%= link_to "上長B", "#" %></li>
          	</ul>
          </li>
          <button type="button" class="btn btn-primary btn-block">申請</button>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
