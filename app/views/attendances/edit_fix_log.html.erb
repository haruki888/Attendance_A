<% provide(:title, '勤怠ログ') %>

  <h1>勤怠ログ</h1>
    <div style="float: left;">
    <%= form_with(url: edit_fix_log_user_attendance_path(@user), method: :get, local: true) do |f| %>
      <%= f.date_select :select_year, { end_year: Time.now.year, prompt: "年", discard_month: true, discard_day: true }, { class: "form-control" } %>
        <%= "#{params.dig(:user, :select_year)}年" if params.dig(:user, :select_year).present? %>
      <%= f.date_select :select_month, { prompt: "月", discard_year: true, discard_day: true},{ class: "form-control" } %>
        <%= "#{params.dig(:user, :select_month)}月" if params.dig(:user, :select_month).present? %>
      <div class='btn-toolbar' role="toolbar">
        <%= f.submit '検索', class: "btn btn-primary" %>
        <%= f.submit 'リセット', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <table class= "table table-bordered" id = "table-attendances">
    <thead>
      <tr>
        <th>日付</th>
        <th>変更前出社時間</th>
        <th>変更前退社時間</th>
        <th>変更後出社</th>
        <th>変更後退社</th>
        <th>指示者</th>
        <th>承認日</th>
      </tr>
    </thead>
    <tbody>
      <% if @attendances.present? %>
        <% @attendances.each do |attendance| %>
          <tr>
            <td><%= attendance.worked_on.strftime("%Y年%m月%d日") %></td>
            <td style="width: 12.5%;"><%= l(attendance.before_started_at, format: :time) if attendance.before_started_at.present? %></td>
            <td style="width: 12.5%;"><%= l(attendance.before_finished_at, format: :time) if attendance.before_finished_at.present? %></td>
            <td style="width: 12.5%;"><%= l(attendance.started_at, format: :time) if attendance.after_started_at.present? %></td>
            <td style="width: 12.5%;"><%= l(attendance.finished_at, format: :time) if attendance.after_finished_at.present? %></td>
            <td><%= attendance.request_change_superior %></td>
            <td><%= attendance.updated_at.strftime("%Y年%m月%d日") %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>