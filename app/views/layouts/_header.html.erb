<header class = "navbaer navbar-fixed-top navbar-inverse">
  <div class = "container">
    <%= link_to "勤怠システム", root_path, id: "logo" %>
    <nav>
      <ul class = "nav navbar-nav navbar-right">
        <li><%= link_to "トップへ", root_path %></li> <!--スダブ（ダミー) 用の＃に置き換えておく-->
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to "ユーザー一覧", 'user_path' %></li>
            <li><%= link_to "基本情報の修正", '#' %></li>
            <li><%= link_to "アカウント", @user.name %></li>
              <li class= "dropdown">
                <a href= "#" class= "dropdown-toggle " data-toggle= "dropdowne">
                <%= current_user.name %><b class= "caret"></b>
                </a>
              <ul class= "dropdown-menu">
                <li><%= link_to "アカウント情報の更新", edit_user_path %></li>
                <li class= "divider"></li>
                <li><%= link_to "Log out", logout_path, method: :delete %></li>
              </ul>
            </li>
          <% end %>  
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
